<table class="requests-header">
  <thead>
    <tr>
      <th>From</th>
      <th>Subject</th>
      <th>Date</th>
      <th>&nbsp;</th>
    </tr>
  <thead>
  <tbody>
  <% @emails.each do |email| %>
    <tr>
      <td><%= email.from_email %></td>
      <td><%= email.subject %></td>
      <td><%= email.created_at %></td>
      <td>
        <%= link_to 'Text', email_url(token: @bucket.token, id: email.id, format: :text), target: '_blank' %>&nbsp;|&nbsp;
        <%= link_to 'HMTL', email_url(token: @bucket.token, id: email.id, format: :html), target: '_blank' %>&nbsp;|&nbsp;
        <%= link_to 'JSON', email_url(token: @bucket.token, id: email.id, format: :json), target: '_blank' %>
    </td>
    </tr>
  <% end %>
  </tbody>
</table>
<hr/>