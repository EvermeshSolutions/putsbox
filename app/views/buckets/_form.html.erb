<%= form_for @bucket, url: update_bucket_path(@bucket.token), method: :put do |f| %>
  <div class="row">
    <div class="col-md-6">
      <h4>Bucket name</h4>
      <h3><%= mail_to "#{@bucket.name}@putsbox.com", @bucket.name %></h3>
    </div>
    <div class="col-md-6">
      <h4>Emails
        <small><em>The number of emails received in this bucket.</em></small>
      </h4>
      <h3 id="bucket-email-count"><%= @bucket.emails_count %></h3>
    </div>
  </div>

  <%= render 'buttons' %>
<% end %>