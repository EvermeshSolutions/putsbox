<%= form_for @bucket, url: update_bucket_path(@bucket.token), method: :put do |f| %>
  <div class="row">
    <div class="col-md-6">
      <h4>Bucket name</h4>
      <h3><%= mail_to "#{@bucket.token}@putsbox.com", @bucket.token %></h3>
    </div>
    <div class="col-md-6">
      <h4>Emails
        <small><em>The number of emails received in this bucket.</em></small>
      </h4>
      <%= react_component('EmailsCounter', { initialEmailsCount: @bucket.emails_count }, { prerender: true }) %>
    </div>
  </div>

  <%= render 'buttons' %>
<% end %>